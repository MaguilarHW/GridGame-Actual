rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Leaderboard collection - allow read for everyone, write for authenticated users
    match /leaderboard/{document=**} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // Games collection - allow read/write for authenticated users
    match /games/{gameId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }
    
    // User Profiles collection - ONLY accessible to authenticated users
    // Users can read any profile, but only write their own profile
    match /userProfiles/{userId} {
      allow read: if request.auth != null; // Authenticated users can read any profile
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public Content collection - accessible to everyone (read)
    // Only authenticated users can write
    match /publicContent/{documentId} {
      allow read: if true; // Everyone can read
      allow create: if request.auth != null; // Only authenticated users can create
      allow update: if request.auth != null; // Only authenticated users can update
      allow delete: if request.auth != null; // Only authenticated users can delete
    }
  }
}

